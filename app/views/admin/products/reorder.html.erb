<style>
li .handle {
  font-size: 12px;
  cursor: move;
  color: #777;
}
</style>

<%= render :partial => 'admin/shared/product_sub_menu' %>



<h1><%= t('reorder') %></h1>
<h3><%= t('reorder_desc') %></h3><br>
	<ul id="item_list">

	<% for product in @products %>
	<% content_tag_for(:li, product, :style => "list-style: none;") do %>
	    <%#= image_tag(product.catalog_image.url(:thumb), :class => 'handle') %>
			<span class="handle"><%= t('reorder_drag') %></span> <%= product.name %>
			<br /><br />
	  <% end %>
	<% end %>
	
	</ul>

<%= sortable_element("item_list", :url => { :action => :order_products, :id => product }, :handle => "handle") %>
